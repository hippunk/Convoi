to convoi-receive-status-droneL [msg]
  ; let l (list ticks get-leader-id-convoi get-hostile-belief get-drone-plan) 
  let id who
  let content get-content msg
  let zones item 2 content
  foreach zones
  [
    if ? != "hostile"
